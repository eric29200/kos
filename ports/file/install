VERSION="5.41"
SRC_FILENAME="file-"$VERSION".tar.gz"
URL="ftp://ftp.astron.com/pub/file/"$SRC_FILENAME

function configure_port() {
	./configure								\
		--host=$HOST							\
		--enable-static							\
		--disable-shared						\
		--prefix="/usr"
}

function build_port() {
	make -j$NJOBS V=1
}

function install_port() {
	make install DESTDIR=$SYSROOT

	# fix libtool and pkgconfig
	SYSROOT_ESC=$(echo $SYSROOT | sed 's/\//\\\//g')
	sed -i "s/\/usr/$SYSROOT_ESC\/usr/" $SYSROOT"/usr/lib/pkgconfig/libmagic.pc"
	sed -i "s/\/usr/$SYSROOT_ESC\/usr/" $SYSROOT"/usr/lib/libmagic.la"
}
