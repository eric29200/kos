VERSION="1.8.0"
SRC_FILENAME="pkgconf-"$VERSION".tar.gz"
URL="https://github.com/pkgconf/pkgconf/archive/refs/tags/"$SRC_FILENAME

function configure_port() {
	autoreconf -i
	./configure								\
		--prefix=$SYSROOT						\
		CC=gcc LD=ld
}

function build_port() {
	make -j$NJOBS
}

function install_port() {
	make install
}
